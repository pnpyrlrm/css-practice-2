<header>
	<div class="header">
		<div>
			{{> logo}}
		</div>

		<nav class="header_nav">
			<div class="header_nav_right">
				{{> nav list=header}}
			</div>
		</nav>
	</div>
</header>

<main class="main">
	{{#with info}}
	<div class="info">
		<h1 class="info_title">{{title}}</h1>
		<p class="info_text">{{description}}</p>
	</div>
	{{/with}}
	{{#with form}}
	<form class="form">
		<div class="form_input_list">
			{{#each inputs}}
			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}">
			{{/each}}
		</div>

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<p class="form_info">{{info}}</p>
	</form>
	{{/with}}
</main>

{{#with updates}}
<div class="updates">
	<h2 class="upd_title">{{title}}</h2>
	<div class="upd_list">
		{{#each list}}
		<div class="upd_icon">{{nickname.[0]}}</div>
		<div class="upd_comments">
			<h3 class="upd_name">{{nickname}}</h3>
			<p class="upd_description">{{description}}</p>
		</div>
		{{/each}}
	</div>
	<a href="{{show_all.url}}" class="upd_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
	<h2 class="exp_title">{{title}}</h2>
	<span class="exp_badge">{{badge}}</span>
	<div class="exp_list">
		{{#each list}}
		<div class="exp_card">
			<h3 class="exp_name">{{name}}</h3>
			<p class="exp_details">{{details}}</p>
		</div>
		{{/each}}
	</div>
</div>
{{/with}}

<footer>
	<div class="footer">
		<div>
			{{> logo}}
			<span class="footer_copyright">Copyright 2023-2024</span>
		</div>

		{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
		{{/each}}
	</div>
</footer>