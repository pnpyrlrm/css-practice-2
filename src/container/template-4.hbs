<header>
	<div class="header">
		<div>
			{{> logo}}
		</div>

		<nav class="header_nav">
			<div class="header_nav_right">
				{{> nav list=header}}
			</div>
		</nav>
	</div>
</header>

{{#with main}}
<main class="main">
	<img src="{{image}}" alt="Main image" class="main_image">
	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{description}}</p>
		<a href="{{href}}" class="button main_button">{{button}}</a>
	</div>
</main>
{{/with}}

<div class="featured">
	{{#each featured}}
	{{> cardFeatured data=this}}
	{{/each}}
</div>

<div class="actions">
	{{#each actions}}
	{{> actions data=this}}
	{{/each}}
</div>

<footer>
	<div class="footer">
		<div>
			{{> logo}}
			<span class="footer_copyright">Copyright 2023-2024</span>
		</div>

		{{#each footer}}
		<div>
			<span class="footer_title">{{title}}</span>
			{{> nav list=links isVertical=true}}
		</div>
		{{/each}}
	</div>
</footer>